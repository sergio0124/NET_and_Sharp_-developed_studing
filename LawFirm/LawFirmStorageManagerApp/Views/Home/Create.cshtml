@{
    ViewData["Title"] = "Create";
}
<div class="text-center">
    <h2 class="display-4">Создание склада</h2>
</div>
<form class="container-fluid" method="post">
    <div class="form-group">
        <div class="row">
            <div class="col-4">Название:</div>
            <div class="col-8"><input type="text" name="storageName" id="storageName" /></div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-4">Ответственный:</div>
            <div class="col-8"><input type="text" name="managerName" id="managerName" /></div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-lg-12">
            <button type="submit" style="min-width: 100px" class="btn btn-sm btn-light">
                Создать
            </button>
        </div>
    </div>
</form>