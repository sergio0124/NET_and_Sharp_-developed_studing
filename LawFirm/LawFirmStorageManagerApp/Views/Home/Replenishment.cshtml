@{
    ViewData["Title"] = "Replenishmant";
}
<div class="text-center">
    <h2 class="display-4">Пополнение складов</h2>
</div>
<form class="container-fluid" method="post">
    <div class="form-group">
        <div class="row">
            <div class="col-4">Склад:</div>
            <div class="col-8">
                <select id="storageId" name="storageId" class="form-control" asp-items="@(new SelectList(@ViewBag.Storage,"Id", "StorageName"))">
                </select>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-4">Материал:</div>
            <div class="col-8">
                <select id="blankId" name="blankId" class="form-control" asp-items="@(new SelectList(@ViewBag.Blank,"Id", "BlankName"))">
                </select>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-4">Количество:</div>
            <div class="col-8"><input type="text" name="count" id="count" /></div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-lg-12">
            <button type="submit" style="min-width: 100px" class="btn btn-sm btn-light">
                Пополнить
            </button>
        </div>
    </div>
</form> 