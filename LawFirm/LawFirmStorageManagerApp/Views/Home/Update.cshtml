@{
    ViewData["Title"] = "Update";
}
<div class="text-center">
    <h2 class="display-4">Изменение</h2>
</div>
<form class="container-fluid" method="post">
    <div class="form-group">
        <div class="row">
            <div class="col-4">Название:</div>
            <div class="col-8"><input type="text" name="storageName" id="storageName" value="@ViewBag.StorageName" /></div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-4">Ответственный:</div>
            <div class="col-8"><input type="text" name="managerName" id="managerName" value="@ViewBag.StorageManager" /></div>
        </div>
    </div>
    <div class="form-group">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Бланк
                    </th>
                    <th>
                        Количество
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.StorageBlanks)
                {
                    <tr>
                        <td>
                            @item.Item1
                        </td>
                        <td>
                            @item.Item2
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="form-group row">
        <div class="col-lg-12">
            <button type="submit" style="min-width: 100px" class="btn btn-sm btn-light">
                Изменить
            </button>
        </div>
    </div>
</form>